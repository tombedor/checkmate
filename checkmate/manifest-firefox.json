{
  "manifest_version": 2,
  "name": "Checkmate",
  "version": "1.0",
  "description": "AI chess tutor that provides real-time game analysis and educational insights for lichess.org",
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["*://*.lichess.org/*"],
      "js": ["browser-polyfill.js", "content.js"]
    }
  ],
  "permissions": ["activeTab", "storage", "https://api.openai.com/*"],
  "applications": {
    "gecko": {
      "id": "checkmate@example.com"
    }
  }
}